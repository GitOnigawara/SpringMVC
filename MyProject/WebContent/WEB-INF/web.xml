<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>customer</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>CharEncodingFilter</filter-name>
    <filter-class>com.filter.CharEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginCheckFilter</filter-name>
    <filter-class>com.filter.LoginCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginCheckFilter</filter-name>
    <url-pattern>/management/*</url-pattern>
    <url-pattern>/massage/*</url-pattern>
    <url-pattern>/schedule/*</url-pattern>
    <url-pattern>/statistics/*</url-pattern>
    <url-pattern>/setting/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Dispatcher_Servlet</servlet-name>
    <servlet-class>com.control.Dispatcher_Servlet</servlet-class>
    <init-param>
      <param-name>prop</param-name>
      <param-value>C:\Users\user\eclipse-workspace\MyProject\WebContent\WEB-INF\prop.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Dispatcher_Servlet</servlet-name>
    <url-pattern>/member/*</url-pattern>
    <url-pattern>/management/*</url-pattern>
    <url-pattern>/massage/*</url-pattern>
    <url-pattern>/schedule/*</url-pattern>
    <url-pattern>/statistics/*</url-pattern>
    <url-pattern>/setting/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Connection_Pool</servlet-name>
    <servlet-class>com.control.Connection_Pool</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
</web-app>